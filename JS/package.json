{
  "name": "stalin-sort",
  "version": "0.0.0",
  "description": "StalinSort in ES6",
  "main": "StalinSort.js",
  "scripts": {
    "test": "jest",
    "lint:js": "eslint -c ./config/.eslintrc.js *.js --fix",
    "doc:lint": "documentation lint *.js",
    "doc:md": "documentation build StalinSort.js -f md -o DOCUMENTATION.md",
    "doc": "npm run doc:lint && npm run doc:md",
    "changelog": "conventional-changelog -p eslint -i CHANGELOG.md -s -r 0",
    "version": "npm run changelog && git add CHANGELOG.md",
    "commit": "git-cz",
    "lint:md": "remark . ../ ../.github -i ./config/.remarkignore",
    "lint": "npm run lint:js && npm run lint:md",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "Stalin",
    "StalinSort",
    "Sort",
    "ES6"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Berkmann18/StalinSort.git"
  },
  "bugs": {
    "url": "https://github.com/Berkmann18/StalinSort/issues"
  },
  "homepage": "https://github.com/Berkmann18/StalinSort#readme",
  "author": "Berkmann18",
  "license": "MIT",
  "devDependencies": {
    "cz-adapter-eslint": "^0.1.2",
    "documentation": "^8.1.2",
    "eslint": "^5.7.0",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.4",
    "remark-cli": "^6.0.0",
    "remark-preset-lint-consistent": "^2.0.2",
    "remark-preset-lint-recommended": "^3.0.2",
    "semantic-release": "^15.10.7",
    "travis-deploy-once": "^5.0.9"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "*.js",
      "test/*.js",
      "!**/node_modules/**",
      "!**/_*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 90,
        "lines": 50,
        "statements": 50
      }
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "./node_modules/",
      "./client/tests/"
    ]
  },
  "engines": {
    "node": ">= 7.0.0",
    "npm": ">= 4.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-adapter-eslint"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint -c ./config/.eslintrc.js --fix",
      "git add",
      "jest --bail --findRelatedTests"
    ],
    "*.md": [
      "remark",
      "git add"
    ]
  }
}
